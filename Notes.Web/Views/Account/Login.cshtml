@model  Notes.Web.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <h3 class="col-lg-11 col-md-11 col-md-offset-1">LOG IN</h3>
</div>
<hr />

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { name = "login", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "col-lg-1 col-md-1 col-sm-1 control-label" })
        <div class="col-lg-8 col-md-8 col-sm-6">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "control-label text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "col-lg-1 col-md-1 col-sm-1 control-label" })
        <div class="col-lg-8 col-md-8 col-sm-6">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "control-label text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RememberMe, new { @class = "col-lg-1 col-md-1 col-sm-1 control-label" })
        <div class="col-lg-1 col-md-1 col-sm-1">
            @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-control", style = "width:40px" })
            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "control-label text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-8 col-md-8 col-sm-6 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 ">
            <div class="btn-group btn-group-justified">
                <bytton type="submit" class="btn btn-default" onclick="document.forms['login'].submit()">
                    <span class="glyphicon glyphicon-log-in"></span> LOG IN
                </bytton>
                <a href=@Url.Action("Register") class="btn btn-default">
                    <span class="glyphicon glyphicon-user"></span> REGISTER
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}